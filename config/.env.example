# YTN News Automation 환경 설정
# 이 파일을 복사하여 .env 파일로 만들고 실제 값을 입력하세요

# === Google Cloud Platform 설정 ===
# 서비스 계정 키 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=config/serviceAccountKey.json

# Firestore 프로젝트 ID
FIREBASE_PROJECT_ID=your-project-id

# === Cloud Run API 설정 ===
# Cloud Run 배포 후 생성되는 URL
CLOUD_RUN_API_URL=https://your-service-name-hash.run.app

# === 네이버 블로그 설정 ===
# 네이버 계정 정보 (자동 로그인용)
NAVER_ID=your-naver-id
NAVER_PASSWORD=your-naver-password

# === 크롤링 설정 ===
# YTN 크롤링 최대 뉴스 개수
MAX_NEWS_COUNT=10

# 크롤링 지연 시간 (초)
CRAWLING_DELAY=1

# === 애플리케이션 설정 ===
# 디버그 모드 활성화
DEBUG=True

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === 보안 설정 ===
# API 인증 토큰 (선택사항)
API_SECRET_KEY=your-secret-key

# === 데이터베이스 설정 ===
# Firestore 컬렉션 이름
NEWS_COLLECTION=news